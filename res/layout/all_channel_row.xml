<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_channel_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    android:soundEffectsEnabled="false" >

    <LinearLayout
        android:id="@+id/tvch_row_Layout"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="3dip"
        android:soundEffectsEnabled="false" >

        <LinearLayout
            android:layout_width="35dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:focusable="false"
            android:gravity="top|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TVCh_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:focusable="false"
                android:text="23"
                android:textColor="@color/BLACK"
                android:textSize="17dip" >
            </TextView>

            <ImageView
                android:id="@+id/MyCh_Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dip"
                android:background="@drawable/icon_mych"
                android:focusable="false" >
            </ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/LogImage"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:focusable="false" >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:focusable="false"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TVCh_Time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:focusable="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="정보가 없습니다."
                android:textColor="@color/PLUM"
                android:textSize="15dip" >
            </TextView>

            <TextView
                android:id="@+id/TVCh_NextTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="프로그램 정보가 없습니다."
                android:textColor="@color/BLACK"
                android:textSize="11dip" >
            </TextView>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/tvch_list_icon_TglBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_icon"
            android:focusable="false"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" >
        </ToggleButton>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tvch_edit_Layout"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:focusable="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ToggleButton
            android:id="@+id/tvch_register_tglBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tvchannel_register_button_bottom_gap"
            android:layout_gravity="center"
            android:background="@drawable/edit_button_register"
            android:focusable="false"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" >
        </ToggleButton>
    </FrameLayout>

</LinearLayout>