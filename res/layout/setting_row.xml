<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/setting_row"
	android:layout_width="fill_parent"
	android:background="@drawable/list_bg01" android:layout_height="wrap_content">

	<TextView android:id="@+id/Setting_Item" 
		android:layout_width="wrap_content" android:textColor="@color/PLUM"
		android:textSize="15dip" 
		android:layout_alignParentLeft="true" 
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dip" android:layout_height="wrap_content"/>

	<ImageView android:id="@+id/Setting_ListIconArrow"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/list_icon_arrow"
		android:layout_alignParentRight="true" 
		android:layout_centerVertical="true"
		android:layout_marginRight="13dip"
		 />
	<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/Setting_ListIconArrow" android:layout_centerVertical="true" android:gravity="right" android:layout_marginRight="3dip">
		<TextView android:textColor="@color/BLUE" android:id="@+id/Setting_Item_Value" android:layout_height="wrap_content" android:textSize="15dip" android:layout_width="wrap_content" android:singleLine="true"></TextView>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/BLUE" android:textSize="15dip" android:id="@+id/Setting_SubItem_Value"></TextView>
	</LinearLayout>

</RelativeLayout>
