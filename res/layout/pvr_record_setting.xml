<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@drawable/set_backbg_01">

	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_height="30dip" android:layout_width="fill_parent"
		android:paddingTop="5dip" android:gravity="center_vertical">
		<ImageView android:id="@+id/Company_Log"
			android:layout_width="54dip" android:scaleType="centerCrop"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_height="33dip" android:layout_centerInParent="true"></ImageView>
		<TextView android:singleLine="true" android:layout_height="wrap_content"
			android:id="@+id/Copany" android:textColor="@color/BLACK"
			android:text="Company" android:gravity="center" android:layout_width="92.6dip"
			android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever"
			android:layout_toRightOf="@+id/Company_Log"></TextView>
		<TextView android:singleLine="true" android:layout_height="wrap_content"
			android:id="@+id/Channel_Number" android:textColor="@color/BLACK"
			android:text="Chanel Number" android:gravity="center"
			android:layout_toLeftOf="@+id/Company_Log" android:layout_width="92.6dip"></TextView>
	</RelativeLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical"
		android:layout_marginTop="25dip" android:layout_height="215dip">

		<LinearLayout android:gravity="center"
			android:layout_width="wrap_content" android:layout_gravity="center"
			android:layout_height="wrap_content">
			<TextView android:layout_height="wrap_content" android:id="@+id/schedule_set_subject"
				android:singleLine="true" android:textSize="18dip"
				android:textStyle="bold" android:marqueeRepeatLimit="marquee_forever"
				android:scrollHorizontally="true" android:ellipsize="marquee"
				style="@style/DetailViewTitle" android:focusable="true"
				android:selectAllOnFocus="true" android:layout_width="170dip"
				android:textColor="@color/WHITE"></TextView>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/icon_class"
				android:background="@drawable/icon_class_all"
				android:layout_marginLeft="2dip"></ImageView>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/icon_hd"
				android:background="@drawable/icon_hd" android:layout_marginLeft="5dip"></ImageView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="30dip" android:gravity="top|center_horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="12월 08일 (수) 11:00 ~ 12:00"
					android:textSize="15dip" android:id="@+id/schedule_set_time"
					android:textColor="@color/White_Smoke"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="fill_parent"
				android:orientation="vertical" android:gravity="center_horizontal"
				android:layout_width="wrap_content" android:layout_marginTop="30dip">
				<RelativeLayout android:layout_height="wrap_content"
					android:layout_marginBottom="10dip"
					android:id="@+id/one_layout" android:layout_width="wrap_content">
					<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/pvr_button_recorddelete" android:id="@+id/ReserveDeleteImgBtn"></ImageButton>
				</RelativeLayout>
				<RelativeLayout android:layout_marginBottom="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/two_layout">
					<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/pvr_button_titlechange" android:id="@+id/ChangeTitleBtn"></ImageButton>
				</RelativeLayout>
				<RelativeLayout android:background="@drawable/set_backbg_02" android:padding="10dip" android:paddingBottom="10dip" android:id="@+id/three_layout" android:layout_width="315px" android:layout_height="wrap_content">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_centerVertical="true"
						android:id="@+id/myRecord_icon" android:background="@drawable/set_icon_record_off" android:soundEffectsEnabled="true"></ImageView>
					<TextView android:layout_height="wrap_content"
						android:layout_marginLeft="30dip" android:soundEffectsEnabled="false"
						android:layout_centerVertical="true" android:textColor="@color/BLACK"
						android:layout_width="wrap_content" android:textSize="15dip"
						android:id="@+id/record_textview" android:text="@string/schedule_myRecord"></TextView>
					<hdlnc.dev2.sangtae.cnm.global.SlideButton
						android:content="@+id/slideContentLayout" android:handle="@+id/slideHandle"
						android:orientation="horizontal" android:layout_height="30px"
						android:background="@drawable/set_button_bg" android:layout_width="99px"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" android:id="@+id/myRecordBtn" android:soundEffectsEnabled="false">
						<Button android:layout_width="wrap_content" android:id="@+id/slideHandle"
							android:background="@drawable/set_button_o"
							android:layout_height="wrap_content">
						</Button>
						<LinearLayout android:layout_width="fill_parent"
						    android:orientation="horizontal"
							android:layout_height="fill_parent" android:layout_weight="1"
							android:background="#00000000" android:id="@+id/slideContentLayout">
						</LinearLayout>
					</hdlnc.dev2.sangtae.cnm.global.SlideButton>
				</RelativeLayout>




			</LinearLayout>

		</LinearLayout>
	</LinearLayout>




</LinearLayout>
