<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/list_backbg_01">
	<ListView android:soundEffectsEnabled="false" android:id="@+id/android:list"
		android:divider="#00000000" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_above="@+id/relativeLayout1"
		android:clickable="false" android:dividerHeight="3dip"
		android:background="@color/ALPHA" android:cacheColorHint="@color/ALPHA"></ListView>
	<RelativeLayout android:padding="5dip"
		android:layout_width="fill_parent" android:background="@drawable/joy_title_bg"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<EditText android:id="@+id/TvMessage_Body"
			android:layout_width="fill_parent" android:inputType="textMultiLine"
			android:layout_marginRight="80dip" android:layout_height="wrap_content" android:maxLength="60" android:hint="메시지 입력(60자)"></EditText>
		<Button android:layout_alignParentRight="true"
			android:layout_width="wrap_content" android:layout_centerVertical="true"
			android:layout_height="wrap_content" android:id="@+id/TvMessage_SendBtn" android:background="@drawable/tvmessage_button_send"></Button>
	</RelativeLayout>
</RelativeLayout>
