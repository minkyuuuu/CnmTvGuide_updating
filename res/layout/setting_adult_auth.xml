<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:fadingEdge="none"
	android:fadeScrollbars="true"
	android:scrollbars="none"
	android:layout_width="fill_parent"  android:layout_height="fill_parent" >
<LinearLayout
  
  android:orientation="vertical"  android:gravity="right"
  android:layout_width="fill_parent"  android:layout_height="fill_parent"
  android:background="@drawable/class19_bg"
  >
  
  <EditText 
  	android:id="@+id/vod_auth_name_text"
  	android:layout_marginLeft="90dp"
  	android:layout_marginRight="20dp"
  	style="@style/DefaultTextStyle.EditText"
  	android:hint="이름 입력"
  	android:layout_width="match_parent" android:layout_height="40dp" android:inputType="textCapCharacters|text" android:layout_marginTop="140dp"/>
  
  <EditText 
  	android:id="@+id/vod_auth_idenKey_text"
  	android:layout_marginTop="3dp"
  	android:layout_marginLeft="90dp"
  	android:layout_marginRight="20dp"
  	style="@style/DefaultTextStyle.EditText"
  	android:hint="\'-\'제외한 주민번호 입력"
  	android:maxLength="13"
  	android:layout_width="match_parent"  android:layout_height="40dp" android:inputType="numberSigned" android:password="true" android:singleLine="true"/>
  	
  	<LinearLayout 
  		android:id="@+id/vod_radioBtn_warp"
  		android:layout_width="wrap_content"  android:layout_height="wrap_content">
  	<RadioButton
  		android:id="@+id/vod_auth_auto_radioBtn"
  		android:layout_marginRight="20dp"
  		android:text=""
  		android:clickable="false"
  		android:checked="true"
  		android:soundEffectsEnabled="false"
  		android:layout_width="wrap_content"  android:layout_height="wrap_content"
  		/>
  	</LinearLayout>	
</LinearLayout>
</ScrollView>